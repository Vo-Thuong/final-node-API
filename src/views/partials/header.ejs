<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link
    href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;1,700&family=Montserrat:wght@400;700&display=swap"
    rel="stylesheet">

<link rel="stylesheet" href="/css/style.css">

<nav class="navbar navbar-expand-lg fixed-top bakery-header-nav shadow-sm bg-white">
    <div class="container">
        <a class="navbar-brand bakery-header-brand d-flex align-items-center" href="/products-view"
            style="text-decoration: none;">
            <div class="bakery-logo-container">
                <img src="/images/logo/logo.jpg" alt="Logo" class="bakery-brand-img">
            </div>

            <div class="bakery-header-logo-text"
                style="margin-left: 12px; display: flex; flex-direction: column; line-height: 1.2;">
                <span class="bakery-header-main">MyBakery</span>
                <small class="bakery-header-sub">Sweet & Fresh</small>
            </div>
        </a>

        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#bakeryNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="bakeryNav">
            <ul class="navbar-nav mx-auto bakery-header-menu">
                <li class="nav-item">
                    <a class="nav-link bakery-header-link" href="/products-view">
                        <i class="bi bi-house-door me-1"></i> Trang chủ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link bakery-header-link" href="/products-view">
                        <i class="bi bi-shop me-1"></i> Thực đơn
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link bakery-header-link" href="/products/add">
                        <i class="bi bi-plus-circle me-1"></i> Thêm bánh mới
                    </a>
                </li>
            </ul>

            <div class="d-flex align-items-center bakery-header-auth">
                <div class="me-3 d-none d-lg-block text-end">
                    <span class="d-block bakery-header-user-label">Thợ bánh chính</span>
                    <span class="bakery-header-user-name">
                        <%= (user && user.username) ? user.username : 'Khách' %>
                    </span>
                </div>
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown">
                        <div class="bakery-header-avatar">
                            <img src="<%= (user && user.avatar) ? user.avatar : '/uploads/default-avatar.png' %>"
                                alt="Avatar">
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 bakery-header-dropdown">
                        <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Hồ sơ</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Cài đặt</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item text-danger" href="/api/logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<div style="margin-top: 90px;"></div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>